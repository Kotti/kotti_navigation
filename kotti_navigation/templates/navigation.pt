<div class="${use_container_class and 'container' or None}"
    id="${display_type == 'tree' and 'navigation-tree' or 'navigation-horizontal'}"
    tal:define="nav_stacked display_type == 'tree' and 'nav-stacked' or ''">
  <ul tal:condition="include_root and display_type == 'tree' and label"
      class="nav nav-pills ${nav_stacked}">
    <li class="nav-header">
      ${label}
    </li>
    <li class="divider"></li>
  </ul>
  <ul tal:condition="include_root and display_type == 'tree'"
      class="nav nav-pills ${nav_stacked}">
    <li tal:define="active root == request.context and 'active' or ''"
        class="${active}">
      <a href="${api.url(root)}"
         title="${getattr(root, 'description', None)}">
        ${root.title}
      </a>
    </li>
  </ul>
  <tal:items tal:condition="display_type == 'tree'" tal:repeat="item items">
    <ul class="nav nav-pills ${nav_stacked}">
      <tal:replace tal:replace="api.render_view('nav-tree', context=item)" />
    </ul>
  </tal:items>
  <ul tal:condition="display_type == 'horizontal'"
      class="nav nav-pills">
    <li class="${'pull-left' if slot in ['left',] else 'pull-right'}">
      <div class="btn-group">
        <a class="btn" href="${api.url(context.parent) if context.parent else '#'}"
            tal:define="target '&lt;&lt; ' + context.parent.title if context.parent else '<Home>'">
          ${target}
        </a>
        <button class="btn dropdown-toggle" data-toggle="dropdown">
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          <li tal:repeat="smi site_menu_items">
            <a href="${api.url(smi)}"
               title="${getattr(smi, 'description', None)}">
              ${smi.title}
            </a>
          </li>
        </ul>
      </div>
    </li>
  </ul>
  <ul tal:condition="display_type == 'horizontal'"
      class="nav nav-pills">
    <li tal:condition="label and items" class="nav-header">
      ${label}
    </li>
    <li tal:condition="label and items and slot in ['left', 'right']" class="divider"></li>
    <tal:block repeat="item items">
      <tal:with_dropdown 
               tal:define="children allowed_children[repeat.item.index]"
               tal:condition="show_dropdown_menus and children">
        <li tal:define="hidden not item.in_navigation and 'hidden' or ''"
            class="${hidden}">
          <a href="${api.url(item)}"
             title="${getattr(item, 'description', None)}"
             class="nav-list-careted">
            ${item.title}
          </a>
        </li>
        <li tal:define="hidden not item.in_navigation and 'hidden' or ''"
            class="dropdown ${hidden}">
          <a href="${api.url(item)}"
             class="dropdown-toggle nav-list-caret"
             data-toggle="dropdown"
             title="${getattr(item, 'description', None)}">
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <tal:repeat tal:repeat="child children">
              <li>
                <a href="${api.url(child)}"
                   title="${getattr(child, 'description', None)}">
                  ${child.title}
                </a>
              </li>
            </tal:repeat>
          </ul>
        </li>
      </tal:with_dropdown>
      <tal:without_dropdown
               tal:define="children allowed_children[repeat.item.index]"
               tal:condition="(children and not show_dropdown_menus) or not children">
        <li tal:define="active item == context and 'active' or '';
                        hidden not item.in_navigation and 'hidden' or ''"
            class="${active} ${hidden}">
          <a href="${api.url(item)}"
             title="${getattr(item, 'description', None)}">
            ${item.title}
          </a>
        </li>
      </tal:without_dropdown>
    </tal:block>
  </ul>
</div>
